

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @task.due_date.to_s(:long) %>
</p>

<p>
  <strong>User:</strong>
  <%= @task.user.email %>
<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Complete:</strong>
  <%= @task.complete %>
</p>

<%= link_to 'Edit', edit_task_path(@task), class: "btn btn-info" %> |
<%= link_to 'Delete', @task, method: :delete, class: "btn btn-danger" ,data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', tasks_path %>
